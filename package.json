{
	"name": "@vesta-cx/ui",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --host -m dev",
		"dev:local": "vite dev -m dev",
		"build": "vite build && pnpm run prepack",
		"preview": "pnpm run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"deploy": "pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
	},
	"files": [
		"dist",
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"dist/**/*.scss",
		"dist/**/*.svelte",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"imports": {
		"#*": "./src/*"
	},
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./components/layout": {
			"types": "./dist/components/layout/index.d.ts",
			"svelte": "./dist/components/layout/index.js"
		},
		"./components/layout/*": {
			"types": "./dist/components/layout/*/index.d.ts",
			"svelte": "./dist/components/layout/*/index.js"
		},
		"./components/ui/*": {
			"types": "./dist/components/ui/*/index.d.ts",
			"svelte": "./dist/components/ui/*/index.js"
		},
		"./components/ui/utils/*": {
			"types": "./dist/components/ui/utils/*/index.d.ts",
			"svelte": "./dist/components/ui/utils/*/index.js"
		},
		"./components/utils/*": {
			"types": "./dist/components/utils/*/index.d.ts",
			"svelte": "./dist/components/utils/*/index.js"
		},
		"./components/*": {
			"types": "./dist/components/*.d.ts",
			"svelte": "./dist/components/*.js"
		},
		"./styles/*": {
			"default": "./dist/styles/*"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"default": "./dist/utils/*.js"
		}
	},
	"peerDependencies": {
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/kit": "^2.0.0",
		"@vesta-cx/utils": "workspace:*",
		"bits-ui": "^2.14.2",
		"layerchart": "^2.0.0-next.27",
		"nanostores": "^1.0.0",
		"svelte": "^5.0.0",
		"svelte-sonner": "^1.0.5"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@inlang/paraglide-js": "^2.7.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@nanostores/persistent": "^1.3.3",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/table-core": "^8.21.3",
		"@types/d3": "^7.4.3",
		"@types/node": "^22.19.3",
		"@vesta-cx/utils": "workspace:*",
		"@vitest/browser": "^3.2.4",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"config": "workspace:*",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"formsnap": "^2.0.1",
		"globals": "^16.5.0",
		"layerchart": "2.0.0-next.27",
		"mdsvex": "^0.12.6",
		"mode-watcher": "^1.1.0",
		"nanostores": "^1.1.0",
		"paneforge": "^1.0.2",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.16",
		"sass": "^1.96.0",
		"sass-embedded": "^1.96.0",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"svelte-preprocess": "^6.0.3",
		"svelte-reactive-preprocessor": "^0.8.3",
		"svelte-sonner": "^1.0.7",
		"sveltekit-superforms": "^2.28.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0",
		"wrangler": "^4.54.0"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@fontsource-variable/archivo": "^5.1.0",
		"@fontsource/geist-sans": "^5.1.0",
		"d3": "^7.9.0"
	}
}
